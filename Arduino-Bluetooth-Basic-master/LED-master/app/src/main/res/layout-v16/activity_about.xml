<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.led_on_off.led.AboutActivity"
    android:background="#212121">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/about_developer"
        android:id="@+id/abt_txt"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#f44336" />

    <ImageView
        android:id="@+id/developer"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:contentDescription="@string/founder_of_lenskills_a_data_engineer_working_as_a_self_employed_apart_from_this_he_likes_to_teach_and_make_projects"
        android:src="@drawable/developer" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/developer"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/the_home_automation_via_bluetooth_our_app_is_going_to_control_the_led_bulb_with_the_help_of_bluetooth_commuincation"
        android:textColor="#f44336"
        android:textSize="22sp" />


    <ImageButton
        android:id="@+id/facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:onClick="fb"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="450dp"
        android:src="@drawable/facebook_red"
        android:contentDescription="@string/todo"
        android:layout_marginStart="20dp" />

    <ImageButton
        android:id="@+id/twitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:onClick="tweet"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="450dp"
        android:src="@drawable/twitter_red"
        android:contentDescription="@string/todo"
        android:layout_marginStart="110dp" />

    <ImageButton
        android:id="@+id/instagram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:onClick="insta"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="450dp"
        android:src="@drawable/instagram_red"
        android:contentDescription="@string/todo"
        android:layout_marginStart="200dp" />

    <ImageButton
        android:id="@+id/website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:onClick="web"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="450dp"
        android:src="@drawable/web_red"
        android:contentDescription="@string/todo"
        android:layout_marginStart="290dp" />


</RelativeLayout>
